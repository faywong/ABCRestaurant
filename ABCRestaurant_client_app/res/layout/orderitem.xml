<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    	android:id="@+id/courseItemLayout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
>
	<TextView
	    android:id="@+id/CouseName"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
  		android:layout_alignParentLeft="true"
  		android:layout_centerVertical="true"
  		android:paddingLeft="20dip"

	    android:textSize="28sp"
	    android:maxLines="1"
	    android:ellipsize="marquee"
	    android:fadingEdge="horizontal"
	    android:textColor="#38C2FF"
	    />

		<TextView
	    android:id="@+id/CoursePrice"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
  		android:layout_alignParentLeft="true"
  		android:layout_centerVertical="true"
	    android:paddingLeft="180dip"

	    android:textSize="28sp"
	    android:maxLines="1"
	    android:ellipsize="marquee"
	    android:fadingEdge="horizontal"

 	    android:textColor="@color/bright_text_dark_focused"
	    />
		
<!-- This layout contains the NO. of the course and the increase/decrease button to 
	change the number of the course
-->
	<RelativeLayout
    	android:id="@+id/courseNoLayout"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_marginLeft="295dip"
  		android:layout_centerVertical="true"
 	    >
	    		
	    <Button
	    android:id="@+id/decNo"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
  		android:layout_alignParentLeft="true"
  		android:layout_centerVertical="true"
	    android:textSize="20sp"
	    android:maxLines="1"
	    android:padding="0dip"
	    android:background="@drawable/down"
 	    android:textColor="#353C42"
	    />
	    				
	    <TextView
	    android:id="@+id/CourseNo"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
  		android:layout_toRightOf="@+id/decNo"
		android:layout_centerVertical="true"
	    android:textSize="28sp"
	    android:maxLines="1"

 	    android:textColor="@color/bright_text_dark_focused"
	    />
	    
	    <Button
	    android:id="@+id/incNo"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
  		android:layout_toRightOf="@+id/CourseNo"
  		android:layout_centerVertical="true"
	    android:textSize="20sp"
	    android:maxLines="1"
	    android:ellipsize="marquee"
	    android:padding="0dip"
	    android:background="@drawable/up"
 	    android:textColor="#353C42"
	    />
 	    
    </RelativeLayout>

		<Button
	    android:id="@+id/delBtn_orderItem"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
  		android:layout_alignParentLeft="true"
	    android:layout_marginLeft="440dip"
	    android:background="@drawable/course_item_del"
	    android:textSize="20sp"
	    
	    android:maxLines="1"
	    android:ellipsize="marquee"
	    android:fadingEdge="horizontal"

 	    android:textColor="#353C42"
	    />
</RelativeLayout>